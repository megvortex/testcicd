pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'python3 -m venv venv && . venv/bin/activate && pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                sh '. venv/bin/activate && pytest test-app.py'
            }
        }

        stage('Deploy') {
            steps {
            sh '''
                    echo "Starting Flask App..."
                    . venv/bin/activate
                    nohup python3 app.py > flask.log 2>&1 &
                    sleep 2
                    ls -lh
                    echo "Flask started. Log file:"
                    tail flask.log
                '''
            }
        }
    }
}
